{% extends "/backoffice/base.html.twig" %}

{% block title %}Admin{% endblock %}

{% block content %}
    <!-- Content Row  -->
    <div class="row">
    <!-- Content Column -->
    <div class="col-lg-12 mb-8">
    <!-- Posts List -->
    <div class="card shadow mb-4">
    <div class="card-header py-3 bg-gray">
        <h6 class="m-0 font-weight-bold text-black">Utilisateurs</h6>
    </div>
    <div class="card-body">
    <table class="table table-striped table-dark text-center" aria-describedby="liste des utilisateurs">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">RÃ´le</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.id_user }}</td>
            <td>{{ user.username|e }}</td>
            <td>{{ user.email|e }}</td>
            <td>{{ user.user_role }}</td>
            <td>
                <a class="btn btn-sm btn-primary shadow-sm" href="">Editer</a>
                <a class="btn btn-sm btn-danger shadow-sm" href="?action=admindeleteuser&user={{ user.id_user }}">Supprimer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>





{% endblock %}