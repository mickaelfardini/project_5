{% extends "/backoffice/base.html.twig" %}

{% block title %}Admin{% endblock %}

{% block content %} 
  <!-- Content Row  -->
    <div class="row">
      <!-- Content Column -->
      <div class="col-lg-12 mb-8">
        <!-- Posts List -->
        <div class="card shadow mb-4">
          <div class="card-header py-3 bg-gray">
            <h6 class="m-0 font-weight-bold text-black">Commentaires</h6>
          </div>
          <div class="card-body">
            <table class="table table-striped table-dark text-center" aria-describedby="liste des commentaire">
              <thead>
                <tr>
                  <th scope="col">Auteur</th>
                  <th scope="col">Contenu</th>
                  <th scope="col">Date de cr√©ation</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
              {% for comment in comments %}
                  <tr> 
                      <td>{{ comment.id_user }}</td>
                      <td>{{ comment.content|e }}</td>
                      <td>{{ comment.created_at }}</td>
                      <td>
                          <a class="btn btn-sm btn-primary shadow-sm" data-toggle="modal" href="">Valider</a>
                          <a class="btn btn-sm btn-danger shadow-sm" href="?action=admindeletecomment&comment={{ comment.id_comment }}">Supprimer</a>
                      </td>
                  </tr>
                  {% endfor %}
              </tbody>
           
                    
 

        
{% endblock %}