{% extends "/frontoffice/base.html.twig" %}
    {% block title %}
<!-- Page Header -->
        <header>            
            <h1>Apprenez à apprendre chaque jour avec nos posts.</h1>
        </header>
        <main>            
    {% endblock title %}  
    {% block all_posts %}
        <article id="post" >
        <h2>{{ post.title }}</h2>
        <p>{{ post.text }}</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
        </article>
        <a class="nav-link" href="/assets/cv/CV_NaceraSahed.pdf"> CV</a><br>
      
        </main>
      

<!-- Contact form -->
    {% block formular %} 
        <section class="mb-4">
            <h2 class="h1-responsive font-weight-bold text-center my-4">Nous contacter</h2>
            <p class="text-center w-responsive mx-auto mb-5">Vous avez des questions? N'hésitez surtout pas à nous contacter . Nous reviendrons vers vous dès que possible.</p>
        <div class="row">
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" action="" method="POST">
               
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="name" name="name" class="form-control">
                            <label for="name" class="">Nom</label>
                        </div>
                    </div>
                   
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="email" name="email" class="form-control">
                            <label for="email" class="">Email</label>
                        </div>
                    </div>
                </div>
               
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input type="text" id="subject" name="subject" class="form-control">
                            <label for="subject" class="">Objet</label>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form">
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                            <label for="message">Votre message</label>
                        </div>
                    </div>
                </div>
            </form>

            <div class="text-center text-md-left">
                <a class="btn" id="btn" onclick="document.getElementById('contact-form').submit();">Soumettre</a>
            </div>
            <div class="status"></div>
        </div>
    {% endblock formular %} 
    {% block contact %} 
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li><i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>50 rue Marie Curie , 75011 Paris</p>
                </li>

                <li><i class="fas fa-phone mt-4 fa-2x"></i>
                    <p> 01 23 67 89 60</p>
                </li>

                <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>contact@blog.com</p>
                </li>
            </ul>
        </div>
    </div>
</section>
    {% endblock contact %} 
  {% endblock %}  